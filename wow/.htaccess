RewriteRule ^forum/(.*) /wow/forum.php?%{QUERY_STRING}
RewriteRule ^character/(.*) /wow/character.php?%{QUERY_STRING}
RewriteRule ^guild/(.*) /wow/guild.php?%{QUERY_STRING}
RewriteRule ^vault/(.*) /wow/vault.php?%{QUERY_STRING}
RewriteRule ^game/(.*) /wow/game.php?%{QUERY_STRING}
RewriteRule ^pref/(.*) /wow/pref.php?%{QUERY_STRING}
RewriteRule ^discussion/(.*) /wow/discussion.php?%{QUERY_STRING}
RewriteRule ^zone/(.*) /wow/zone.php?%{QUERY_STRING}
